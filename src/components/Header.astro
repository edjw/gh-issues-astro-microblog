---
import HeaderLink from "./HeaderLink.astro";
import ThemeSwitcher from "../components/ThemeSwitcher.astro";
import { SITE_TITLE, MAIN_WEBSITE_URL } from "../consts";
---

<header class="flex gap-x-6 sm:gap-x-8 items-center justify-between">
  <h1 class="underline hover:no-underline text-normal text-lg">
    <a href="/">{SITE_TITLE}</a>
  </h1>
  <nav class="leading-tight">
    <HeaderLink
      href={MAIN_WEBSITE_URL}
      class={`hover:underline flex flex-row items-center`}
    >
      Main site

      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-4 h-4 ml-1 inline-block"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
        ></path>
      </svg>
    </HeaderLink>
    <!-- <HeaderLink href="/">Micro</HeaderLink> -->
    <!-- <HeaderLink href="/blog">Blog</HeaderLink> -->
    <!-- <HeaderLink href="https://twitter.com/astrodotbuild" target="_blank">Twitter</HeaderLink> -->
    <!-- <HeaderLink href="https://github.com/withastro/astro" target="_blank">GitHub</HeaderLink> -->
  </nav>
  <ThemeSwitcher />
</header>
