---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

type Props = {
  description: string;
  title: string;
  slug?: string;
  image?: string;
};
const { description, title, image } = Astro.props;


// Some things to get the right data to the OG image generator
const pathname = Astro.url.pathname;

let {slug} = Astro.params;
let socialImage = "";

if (image !== undefined) {
  socialImage = image;
}

if (pathname === "/" || slug === undefined) {
  socialImage = `/image/index.png`;
}

// It's the tags page
if (pathname === "/tags") {
  socialImage = "/image/tagsPage.png";
}

// It's a tag page
if (pathname.startsWith("/tags/")) {
  const tag = pathname.split("/")[2];
    socialImage = `/image/tags-${tag}.png`;
}

---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={socialImage} />
  </head>
  <body
    class="container grid grid-rows-[auto_1fr_auto] grid-cols-1 min-h-[100dvh] max-w-xl mx-auto pt-4 pb-8 px-4 gap-y-12 dark:bg-gray-800 dark:text-white"
  >
    <Header />
    <main class="prose dark:prose-invert">
      <slot />
    </main>
    <Footer />
  </body>
</html>
